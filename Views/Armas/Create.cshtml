@model RpgMvc.Models.ArmaViewModel
@{
    ViewBag.Title = "Nova Arma";
}
<!-- Insira aqui os TempData de sucesso e erro para evitar tela de morte -->
<h2> Criar uma nova Arma </h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr/>
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-6">
                @Html.LabelFor(model => model.Dano, htmlAttributes: new { @class = "control-label col-md-2"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset--2 col-md-6">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Retornar", "Index")
</div>